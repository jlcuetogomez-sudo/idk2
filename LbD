-- Watcher: auto-remove if it respawns
task.spawn(function()
	while task.wait(3) do
		local playerClient = StarterPlayer:FindFirstChild("StarterPlayerScripts")
		if playerClient then
			playerClient = playerClient:FindFirstChild("PLAYER_CLIENT")
			if playerClient then
				local badScript = playerClient:FindFirstChild("what is it that you truly desire?")
				if badScript then
					badScript:Destroy()
					warn("[Rayfield] Deleted reappearing malicious script.")
				end
			end
		end
	end
end)


