 local Main = Window:CreateTab("Main", 4483362458)


 local Section = Main:CreateSection("ESP Zombies ")

local folder = workspace:WaitForChild("ActiveZombies")

local zombieColors = {
	Bloodletter = Color3.fromRGB(255, 115, 0), -- orange
	Shambler = Color3.fromRGB(255, 255, 255), -- white
	VariantShambler = Color3.fromRGB(255, 255, 255), -- white
	Butcher = Color3.fromRGB(0, 85, 255), -- blue
	Sniveler = Color3.fromRGB(255, 255, 0), -- yellow
	Boomer = Color3.fromRGB(255, 0, 0) -- red
}

local highlights = {}

local function highlightModel(model, color)
	if not highlights[model] then
		local hl = Instance.new("Highlight")
		hl.FillColor = color
		hl.OutlineColor = color
		hl.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
		hl.Parent = model
		highlights[model] = hl
	end
end

local function removeHighlight(model)
	if highlights[model] then
		highlights[model]:Destroy()
		highlights[model] = nil
	end
end

local function toggleHighlight(zombieName, enabled)
	for _, mob in ipairs(folder:GetChildren()) do
		if mob.Name == zombieName then
			if enabled then
				highlightModel(mob, zombieColors[zombieName])
			else
				removeHighlight(mob)
			end
		end
	end
end

folder.ChildAdded:Connect(function(child)
	if zombieColors[child.Name] then
		local flag = "Toggle_" .. child.Name
		local toggle = Rayfield.Flags[flag]
		if toggle and toggle.CurrentValue then
			highlightModel(child, zombieColors[child.Name])
		end
	end
end)

folder.ChildRemoved:Connect(removeHighlight)

Main:CreateToggle({
	Name = "Bloodletter",
	CurrentValue = false,
	Flag = "Toggle_Bloodletter",
	Callback = function(Value)
		toggleHighlight("Bloodletter", Value)
	end
})

Main:CreateToggle({
	Name = "Shambler",
	CurrentValue = false,
	Flag = "Toggle_Shambler",
	Callback = function(Value)
		toggleHighlight("Shambler", Value)
	end
})

Main:CreateToggle({
	Name = "VariantShambler",
	CurrentValue = false,
	Flag = "Toggle_VariantShambler",
	Callback = function(Value)
		toggleHighlight("VariantShambler", Value)
	end
})

Main:CreateToggle({
	Name = "Butcher",
	CurrentValue = false,
	Flag = "Toggle_Butcher",
	Callback = function(Value)
		toggleHighlight("Butcher", Value)
	end
})

Main:CreateToggle({
	Name = "Sniveler",
	CurrentValue = false,
	Flag = "Toggle_Sniveler",
	Callback = function(Value)
		toggleHighlight("Sniveler", Value)
	end
})

Main:CreateToggle({
	Name = "Boomer",
	CurrentValue = false,
	Flag = "Toggle_Boomer",
	Callback = function(Value)
		toggleHighlight("Boomer", Value)
	end
})

-- // WalkSpeed Lock System (Fixed + Auto-Character Support)
local player = game.Players.LocalPlayer
local humanoid
local lockedSpeed = 16
local lockEnabled = false

-- Function to get current humanoid safely
local function getHumanoid()
	local char = player.Character or player.CharacterAdded:Wait()
	return char:WaitForChild("Humanoid")
end

-- Initialize humanoid
humanoid = getHumanoid()

-- Update humanoid when character respawns
player.CharacterAdded:Connect(function(char)
	task.wait(1)
	humanoid = char:WaitForChild("Humanoid")
	if lockEnabled then
		humanoid.WalkSpeed = lockedSpeed
	end
end)

-- Section for WalkSpeed control
local speedSection = Main:CreateSection("WalkSpeed Control")

-- Slider to choose speed
Main:CreateSlider({
	Name = "WalkSpeed",
	Range = {16, 39}, -- min and max speed
	Increment = 1,
	Suffix = "Speed",
	CurrentValue = lockedSpeed,
	Flag = "Slider_WalkSpeed",
	Callback = function(Value)
		lockedSpeed = Value
		if lockEnabled and humanoid then
			humanoid.WalkSpeed = lockedSpeed
		end
	end
})

-- Toggle for lock
Main:CreateToggle({
	Name = "Lock WalkSpeed",
	CurrentValue = false,
	Flag = "Toggle_LockWalkSpeed",
	Callback = function(Value)
		lockEnabled = Value
		if Value then
			task.spawn(function()
				while lockEnabled do
					local hum = humanoid or getHumanoid()
					if hum then
						hum.WalkSpeed = lockedSpeed
					end
					task.wait(0.2)
				end
			end)
		end
	end
})

-- // No Jump Cooldown Toggle (optimized)
local jumpSection = Main:CreateSection("Jump Control")

local jumpConnection -- to prevent duplicate connections

Main:CreateToggle({
	Name = "No Jump Cooldown",
	CurrentValue = false,
	Flag = "Toggle_NoJumpCooldown",
	Callback = function(Value)
		local player = game.Players.LocalPlayer
		local backpack = player:WaitForChild("Backpack")

		-- function to update JumpCooldown safely
		local function setCooldownDisabled(state)
			local jc = backpack:FindFirstChild("JumpCooldown")
			if jc then
				jc.Disabled = state
			else
				Rayfield:Notify({
					Title = "Warning",
					Content = "JumpCooldown script not found in Backpack!",
					Duration = 4
				})
			end
		end

		-- Apply immediately
		setCooldownDisabled(Value)

		-- Disconnect old connection if exists
		if jumpConnection then
			jumpConnection:Disconnect()
			jumpConnection = nil
		end
		-- Watch for JumpCooldown being re-added only if toggle is on
		if Value then
			jumpConnection = backpack.ChildAdded:Connect(function(child)
				if child.Name == "JumpCooldown" then
					task.wait(0.1)
					setCooldownDisabled(true)
				end

			end)
		end
	end
})


